spring.datasource.url=<%= @envar['PLUTO_DATASOURCE_URL'] %>
spring.datasource.username=<%= @envar['PLUTO_DATASOURCE_USERNAME'] %>
spring.datasource.password=<%= @envar['PLUTO_DATASOURCE_PASSWORD'] %>
spring.jpa.hibernate.ddl-auto=none

pluto.server.alfred.url=<%= @envar['PLUTO_SERVER_ALFRED_URL'] %>
pluto.server.web.url=<%= @envar['PLUTO_SERVER_WEB_URL'] %>

pluto.jwt.secret=<%= @envar['PLUTO_JWT_SECRET'] %>

pluto.oauth.orcid.client.id=<%= @envar['PLUTO_OAUTH_ORCID_CLIENT_ID'] %>
pluto.oauth.orcid.client.secret=<%= @envar['PLUTO_OAUTH_ORCID_CLIENT_SECRET'] %>
pluto.oauth.orcid.redirect.uri=<%= @envar['PLUTO_OAUTH_ORCID_REDIRECT_URI'] %>
pluto.oauth.orcid.endpoint.authorize=https://sandbox.orcid.org/oauth/authorize
pluto.oauth.orcid.endpoint.token=https://sandbox.orcid.org/oauth/token
pluto.oauth.orcid.endpoint.api=https://pub.sandbox.orcid.org/v2.0
